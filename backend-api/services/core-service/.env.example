# Core Service Environment Configuration

# Service Configuration
NODE_ENV=development
SERVICE_VERSION=1.0.0
CORE_SERVICE_PORT=3001
CORE_SERVICE_HOST=0.0.0.0

# Database Configuration
DATABASE_URL="postgresql://your_user:your_password@localhost:5432/eventbn_core"
DIRECT_URL="postgresql://your_user:your_password@localhost:5432/eventbn_core"

# Inter-Service Communication
INTER_SERVICE_KEY=dev-service-key-change-in-production
POST_SERVICE_URL=http://localhost:3002

# CORS Origins
CORE_SERVICE_CORS_ORIGINS=http://localhost:3000,http://localhost:3002,http://localhost:8080

# RabbitMQ Configuration
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_EXCHANGE=eventbn_exchange
RABBITMQ_USER_QUEUE=user_events
RABBITMQ_EVENT_QUEUE=event_events

# JWT Configuration (for authentication)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# File Upload Configuration
MAX_FILE_SIZE=10mb
UPLOAD_DIR=./uploads/core

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/core-service.log

# Cache Configuration (if using Redis)
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600