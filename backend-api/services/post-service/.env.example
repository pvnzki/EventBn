# Post Service Environment Configuration

# Service Configuration
NODE_ENV=development
SERVICE_VERSION=1.0.0
POST_SERVICE_PORT=3002
POST_SERVICE_HOST=0.0.0.0

# Database Configuration (can be same or separate database)
DATABASE_URL="postgresql://your_user:your_password@localhost:5432/eventbn_posts"
DIRECT_URL="postgresql://your_user:your_password@localhost:5432/eventbn_posts"

# Inter-Service Communication
INTER_SERVICE_KEY=dev-service-key-change-in-production
CORE_SERVICE_URL=http://localhost:3001

# CORS Origins
POST_SERVICE_CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080

# RabbitMQ Configuration
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_EXCHANGE=eventbn_exchange
RABBITMQ_POST_QUEUE=post_events
RABBITMQ_SOCIAL_QUEUE=social_events

# JWT Configuration (should match core service for token validation)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# File Upload Configuration (higher limits for social media)
MAX_FILE_SIZE=50mb
UPLOAD_DIR=./uploads/posts
ALLOWED_MEDIA_TYPES=image/jpeg,image/png,image/gif,image/webp,video/mp4,video/webm

# Rate Limiting (more permissive for social feeds)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=2000

# Social Media Configuration
MAX_POST_LENGTH=2000
MAX_COMMENT_LENGTH=500
FEED_PAGE_SIZE=20
EXPLORE_FEED_SIZE=30

# Media Processing
ENABLE_IMAGE_RESIZE=true
IMAGE_SIZES=thumbnail:150x150,medium:400x400,large:800x800
VIDEO_COMPRESSION=enabled

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/post-service.log

# Cache Configuration (if using Redis)
REDIS_URL=redis://localhost:6379
CACHE_TTL=1800

# Analytics Configuration
ENABLE_ANALYTICS=true
ANALYTICS_BATCH_SIZE=100
ANALYTICS_FLUSH_INTERVAL=60000